process {
  container = 'anibali/pytorch:cuda-10.0'

  withLabel: with_cpus {
        cpus = 1
        memory = '7G'
  }
  
  withLabel: with_gpus {
       maxForks = 1
       containerOptions = { workflow.containerEngine == "singularity" ? '--nv':
       ( workflow.containerEngine == "docker" ? '--gpus all': null ) }
  } 
}