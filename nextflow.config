params {
  // General
  platform = 'with_all_gpus'
  pytorch = false
  tensorflow = false
  xgboost = false
  no_cuda = false

  // Shared
  seed = 0
  epochs = 10

  // xgboost
  dataset = 'covertype'
}

env {
  PYTHONNOUSERSITE = 1
}

process {
  container = 'mlflowcore/base:1.0.0'

  withLabel: with_cpus {
        cpus = 4
        memory = '7G'
  }

  withLabel: with_all_gpus {
       maxForks = 1
       containerOptions = {
          workflow.containerEngine == "singularity" ? '--nv':
              ( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus all': null ) } 
  }

  withLabel: with_single_gpu {
    maxForks = 1
       containerOptions = {
          workflow.containerEngine == "singularity" ? '--nv':
              ( workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g) --gpus device=0': null ) }
  } 
}
